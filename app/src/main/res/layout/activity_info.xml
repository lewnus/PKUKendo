<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ebebf1"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:background="#353535">
        <ImageButton
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="20dp"
            android:id="@+id/news_show_back"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:scaleType="fitCenter"
            android:layout_weight="1.5"
            android:src="@drawable/back_arrow"
            android:background="#00000000"/>
        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/no_use1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:textSize="20sp"
            android:text="我"
            android:textColor="#ffffff"
            />
        <TextView
            android:layout_marginRight="5dp"
            android:paddingTop="9dp"
            android:id="@+id/save"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="60.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="20.0dip" >



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_marginTop="180dp"
            android:layout_height="wrap_content" >

            <TableLayout
                android:id="@+id/mUser"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/personal_info_bg"
                android:paddingLeft="1.0dip"
                android:shrinkColumns="0"
                android:stretchColumns="0" >

                <RelativeLayout
                    android:id="@+id/mname"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp" >

                    <TextView
                        android:id="@+id/test1"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="12.0dip"
                        android:text="我的昵称"
                        android:textColor="#ff333333"
                        android:textSize="16.0sp" />

                    <ImageView
                        android:id="@+id/pic"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right"
                        android:gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:paddingRight="22.0dip"

                        android:src="@drawable/tri" />




                    <TextView
                        android:id="@+id/uname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_toLeftOf="@+id/pic"
                        android:paddingRight="10dp"/>

                </RelativeLayout>


                <TableRow
                    android:id="@+id/more_page_row_1_5"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:background="#1d000000"
                    android:paddingBottom="1.0dip"
                    android:paddingTop="0.0dip" >

                </TableRow>
                <TableRow
                    android:id="@+id/password"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:layout_height="30dp"
                    android:paddingBottom="1.0dip"
                    android:paddingTop="1.0dip" >



                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:paddingLeft="10.0dip"
                        android:text="修改密码"
                        android:textColor="#ff333333"
                        android:textSize="16.0sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right"
                        android:gravity="center_vertical"
                        android:paddingRight="20.0dip"
                        android:src="@drawable/tri"/>
                </TableRow>

            </TableLayout>
        </LinearLayout>





    </LinearLayout>
</RelativeLayout>
