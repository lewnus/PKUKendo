<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <pkukendoclub.pkukendo.tools.CircleImageView
        android:id="@+id/img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        app:border_width="2dp"
        app:border_color="#dbdbdb"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="15dp"

        android:layout_below="@+id/img"
        android:layout_alignLeft="@+id/img"
        android:layout_alignStart="@+id/img"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img"
        android:layout_toEndOf="@+id/img"
        android:layout_toLeftOf="@+id/view_btn"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/title"
            android:text="1312312hehehehehehhehehehhehehehhehehehehhehe"

            android:textSize="15dp"
            android:textColor="#000000"

            android:singleLine="true"
            android:ellipsize="end"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/info"
        android:text="13123123123123123123"
        android:layout_toRightOf="@+id/img"
        android:layout_toEndOf="@+id/img"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
        android:textColor="#000000"

        android:singleLine="true"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/view_btn"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:background="@drawable/corners_bg3"
        android:text="评论数：0"
        android:textColor="#000000"/>


</RelativeLayout>