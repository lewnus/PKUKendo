<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="pkukendoclub.pkukendo.FirstPage">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src ="@drawable/kendoclub"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_marginRight="7dp"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView"
        android:src="@drawable/peking"/>



    <TextView
        android:id="@+id/mLogin"
        android:text="登陆"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:background="@drawable/corners_bg2"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/mRegister"
        android:text="注册"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="#129aff"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:background="@drawable/corners_bg"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
