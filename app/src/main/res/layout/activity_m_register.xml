<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ebebf1"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:background="#353535">
        <ImageButton
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="20dp"
            android:id="@+id/back_register"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:scaleType="fitCenter"
            android:layout_weight="1.5"
            android:src="@drawable/back_arrow"
            android:background="#00000000"/>
        <TextView
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:textSize="20sp"
            android:text=""
            android:textColor="#ffffff"
            />
        <TextView
            android:layout_marginRight="5dp"
            android:paddingTop="9dp"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:id="@+id/username_register"
            android:layout_marginLeft="30dp"
            android:layout_width="fill_parent"
            android:layout_marginRight="30dp"
            android:layout_height="40dp"
            android:hint="用户名"
            android:background="@drawable/corners_bg"
            />
        <EditText
            android:layout_marginTop="70dp"

            android:paddingLeft="20dp"
            android:id="@+id/nickname_register"
            android:layout_marginLeft="30dp"
            android:layout_width="fill_parent"
            android:layout_marginRight="30dp"
            android:layout_height="40dp"
            android:hint="昵称"
            android:background="@drawable/corners_bg"
            />
        <EditText
            android:layout_marginTop="120dp"

            android:paddingLeft="20dp"
            android:id="@+id/password_register"
            android:layout_marginLeft="30dp"
            android:layout_width="fill_parent"
            android:layout_marginRight="30dp"
            android:layout_height="40dp"
            android:hint="密码"
            android:inputType="textPassword"
            android:background="@drawable/corners_bg"
            />
        <EditText
            android:layout_marginTop="170dp"

            android:paddingLeft="20dp"
            android:id="@+id/password2_register"
            android:layout_marginLeft="30dp"
            android:layout_width="fill_parent"
            android:layout_marginRight="30dp"
            android:layout_height="40dp"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:background="@drawable/corners_bg"
            />
        <LinearLayout
            android:layout_marginTop="230dp"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:background="@drawable/corners_bg" >

            <RelativeLayout
                android:id="@+id/firstpage_tab1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical" >


                    <TextView
                        android:id="@+id/male_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="20sp"
                        android:text="男"
                        android:textColor="#129aff" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/firstpage_tab2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical" >


                    <TextView
                        android:id="@+id/female_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="女"
                        android:textSize="20sp"
                        android:textColor="#129aff" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>


        <TextView
            android:layout_marginTop="295dp"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:background="@drawable/corners_bg2"
            android:text="注册"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="20dp"
            android:id="@+id/button_register"
            />
    </RelativeLayout>



</LinearLayout>
